From ca443d7790ea9b491f3928e4ba2b6fdca74f9add Mon Sep 17 00:00:00 2001
From: Michael Krummsdorf <michael.krummsdorf@tqs.de>
Date: Wed, 28 May 2014 14:41:50 +0200
Subject: [PATCH] ARM: tqma28: add some mba28 display pins

Signed-off-by: Michael Krummsdorf <michael.krummsdorf@tqs.de>
---
 arch/arm/boot/dts/imx28-tqma28.dts |   15 ++++++++++++++-
 1 file changed, 14 insertions(+), 1 deletion(-)

diff --git a/arch/arm/boot/dts/imx28-tqma28.dts b/arch/arm/boot/dts/imx28-tqma28.dts
index ca8780e..c462d8e 100644
--- a/arch/arm/boot/dts/imx28-tqma28.dts
+++ b/arch/arm/boot/dts/imx28-tqma28.dts
@@ -108,6 +108,19 @@
 					fsl,pull-up = <0>;
 				};
 
+				lcdif_pins_mba28: lcdif-evk@0 {
+					reg = <0>;
+					fsl,pinmux-ids = <
+						0x11c0 /* MX28_PAD_LCD_VSYNC__LCD_VSYNC */
+						0x11d0 /* MX28_PAD_LCD_HSYNC__LCD_HSYNC */
+						0x11e0 /* MX28_PAD_LCD_DOTCLK__LCD_DOTCLK */
+						0x11f0 /* MX28_PAD_LCD_ENABLE__LCD_ENABLE */
+					>;
+					fsl,drive-strength = <0>;
+					fsl,voltage = <1>;
+					fsl,pull-up = <0>;
+				};
+
 				mmc1_4bit_pins_a: mmc1-4bit@0 {
 					reg = <0>;
 					fsl,pinmux-ids = <
@@ -128,7 +141,7 @@
 			lcdif@80030000 {
 				pinctrl-names = "default";
 				pinctrl-0 = <&lcdif_24bit_pins_a
-					     &lcdif_pins_evk>;
+					     &lcdif_pins_mba28>;
 				panel-enable-gpios = <&gpio3 30 0>;
 				status = "okay";
 			};
